--[[ 
  Evelynn Scripts
  A sleek, modern Executor GUI with buttons for visibility and loading scripts.
--]]

-- Services
local UserInputService = game:GetService("UserInputService")
local Players = game:GetService("Players")

-- Settings
local toggleKey = Enum.KeyCode.LeftControl
local localPlayer = Players.LocalPlayer

-- GUI Setup
local ScreenGui = Instance.new("ScreenGui")
ScreenGui.Name = "EvelynnScriptsUI"
ScreenGui.Parent = game:GetService("CoreGui")

local Frame = Instance.new("Frame")
Frame.Name = "MainFrame"
Frame.Parent = ScreenGui
Frame.Size = UDim2.new(0, 400, 0, 200)
Frame.Position = UDim2.new(0.5, -200, 0.5, -100)
Frame.BackgroundColor3 = Color3.fromRGB(26, 26, 26)
Frame.BorderSizePixel = 5
Frame.BorderColor3 = Color3.fromRGB(255, 255, 255)
Frame.Active = true
Frame.Draggable = true
Frame.ZIndex = 10

local UIListLayout = Instance.new("UIListLayout")
UIListLayout.Parent = Frame
UIListLayout.SortOrder = Enum.SortOrder.LayoutOrder
UIListLayout.Padding = UDim.new(0, 15)

local UICorner = Instance.new("UICorner")
UICorner.Parent = Frame
UICorner.CornerRadius = UDim.new(0, 15)

-- Title Label
local TitleLabel = Instance.new("TextLabel")
TitleLabel.Parent = Frame
TitleLabel.Size = UDim2.new(1, 0, 0, 40)
TitleLabel.BackgroundColor3 = Color3.fromRGB(45, 45, 45)
TitleLabel.BorderSizePixel = 0
TitleLabel.Text = "Evelynn Scripts"
TitleLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
TitleLabel.Font = Enum.Font.GothamBold
TitleLabel.TextSize = 24
TitleLabel.TextXAlignment = Enum.TextXAlignment.Center
TitleLabel.TextYAlignment = Enum.TextYAlignment.Center
TitleLabel.ZIndex = 11

-- Utility: create button
local function createButton(text, parent, size, position)
    local btn = Instance.new("TextButton")
    btn.Parent = parent
    btn.Size = size or UDim2.new(1, -40, 0, 50)
    btn.Position = position or UDim2.new(0, 20, 0, 40)
    btn.BackgroundColor3 = Color3.fromRGB(33, 33, 33)
    btn.BorderSizePixel = 2
    btn.BorderColor3 = Color3.fromRGB(255, 255, 255)
    btn.Text = text
    btn.Font = Enum.Font.GothamBold
    btn.TextSize = 20
    btn.TextColor3 = Color3.fromRGB(255, 255, 255)
    local UICorner = Instance.new("UICorner")
    UICorner.Parent = btn
    UICorner.CornerRadius = UDim.new(0, 12)

    return btn
end

-- Show/Hide Button
local btnShowHide = createButton("Show/Hide GUI", ScreenGui, UDim2.new(0, 150, 0, 50), UDim2.new(0, 20, 0, 200))

-- One Button: "Load Script"
local btnLoadScript = createButton("Load Script", Frame)

-- Show/Hide Button functionality
btnShowHide.MouseButton1Click:Connect(function()
    Frame.Visible = not Frame.Visible
end)

-- Load Script Button functionality
btnLoadScript.MouseButton1Click:Connect(function()
    -- You can implement the script you want to load here
    print("Script Loaded!")
    -- Example: Execute a sample script
    local scriptToLoad = "print('Evelynn Script Loaded!')"
    loadstring(scriptToLoad)()
end)

-- Automatically show GUI on start
Frame.Visible = true

-- Toggle GUI visibility (for desktop users, via Left Control)
UserInputService.InputBegan:Connect(function(input, processed)
    if processed then return end
    if input.KeyCode == toggleKey then
        Frame.Visible = not Frame.Visible
    end
end)
